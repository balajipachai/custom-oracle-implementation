{
  "name": "marlyn-labs",
  "version": "1.0.0",
  "description": "Truffle and Smart Contract Sandox",
  "main": "",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "test-app": "will be added",
    "clean": "rm -rf .config .npm .node-gyp node_modules && npm install",
    "cleanSol": "rm -rf build/contracts",
    "compile": "clear && truffle compile && npm run lint",
    "coverage": "scripts/coverage.sh",
    "lint": "solhint \"contracts/**/*.sol\"",
    "migrate": "clear && truffle migrate",
    "migrateAll": "clear && truffle migrate --reset",
    "recompile": "clear && npm run cleanSol && truffle compile --all && npm run lint",
    "test-contracts": "clear && truffle test",
    "eslint-report": "eslint . -f node_modules/eslint-detailed-reporter/lib/detailed.js -o report.html"
  },
  "author": "Balaji Shetty Pachai <balaji.pachai08@gmail.com>",
  "dependencies": {
    "fix": "0.0.6",
    "openzeppelin-solidity": "^2.5.0",
    "truffle-flattener": "^1.4.2",
    "truffle-hdwallet-provider": "^1.0.17",
    "web3": "^1.2.6",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@openzeppelin/test-environment": "^0.1.2",
    "@openzeppelin/test-helpers": "^0.5.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "coveralls": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-detailed-reporter": "^0.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eth-gas-reporter": "^0.2.15",
    "husky": "^4.2.3",
    "mocha": "^5.2.0",
    "nodemon": "^2.0.2",
    "solidity-coverage": "^0.7.1"
  }
}
